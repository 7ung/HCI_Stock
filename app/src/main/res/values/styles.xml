<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:actionBarDivider">@color/colorAccent</item>

    </style>

    <style name="GridViewItem">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>

    <style name="TextGridViewItem" parent="GridViewItem">
        <item name="android:gravity">center_vertical|left</item>
    </style>
    <style name="NumericGridViewItem" parent="GridViewItem">
        <item name="android:gravity">center_vertical|right</item>
    </style>

    <style name="GridViewHeader_TextContent" parent="TextGridViewItem">
        <item name="android:background">@color/colorSecondary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/SecondaryTextDark</item>
        <item name="android:textSize">@dimen/text_size_medium_small</item>

    </style>

    <style name="GridViewHeader_NumericContent" parent="NumericGridViewItem">
        <item name="android:background">@color/colorSecondary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/SecondaryTextDark</item>
        <item name="android:textSize">@dimen/text_size_medium_small</item>

    </style>

    <style name="CustomTabWidgetText"
        parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:textSize">20sp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="ToolBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/widget_medium_size</item>
        <item name="android:background">@drawable/white_grey_gradient_color</item>
    </style>

    <style name="PrimaryText">
        <item name="android:textColor">@color/PrimaryTextDark</item>
        <item name="android:textSize">@dimen/text_size_medium_big</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="PageTitle" parent="PrimaryText">
        <item name="android:gravity">center_vertical</item>
        <item name="android:drawablePadding">@dimen/screen_padding_medium_small</item>
    </style>

    <style name="CommodityItemText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:padding">@dimen/screen_padding_small</item>
    </style>

    <style name="CommonToggleButton">
        <item name="android:layout_width">@dimen/widget_medium_small_size</item>
        <item name="android:layout_height">@dimen/widget_medium_small_size</item>
        <item name="android:background">@null</item>
        <item name="android:textOff"></item>
        <item name="android:textOn"></item>
    </style>

    <style name="FullScreenToggleButton" parent="CommonToggleButton">
        <item name="android:button">@drawable/ic_fullscreen_black_36dp</item>
        <item name="android:layout_marginRight">@dimen/screen_padding_medium_2</item>
        <item name="android:layout_marginBottom">@dimen/screen_padding_medium_2</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_alignParentRight">true</item>
    </style>
    <style name="CommodityItemToggleMarker" parent="CommonToggleButton">
        <item name="android:button">@drawable/marker_toggle_btn</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_margin">@dimen/collection_spacing_small</item>
    </style>

    <style name="CommodityGridView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:numColumns">2</item>
        <item name="android:stretchMode">columnWidth</item>
        <item name="android:horizontalSpacing">2dp</item>
        <item name="android:verticalSpacing">2dp</item>
    </style>

    <style name="CommonWidgetMargin">
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:layout_marginTop">4dp</item>
    </style>

    <style name="WidgetMarginMedium">
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
    </style>

    <style name="HintText" parent="CommonWidgetMargin">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:layout_marginLeft">4dp</item>
        <item name="android:gravity">center_vertical|left</item>
    </style>

    <style name="MediumTextDark" parent="CommonWidgetMargin">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/SecondaryTextDark</item>
        <item name="android:layout_height">32dp</item>
    </style>

    <style name="MediumTextDark_Label" parent="MediumTextDark">
        <item name="android:gravity">center_vertical|right</item>
        <item name="android:paddingRight">2dp</item>
    </style>

    <style name="MediumTextDark_Detail" parent="MediumTextDark" >
        <item name="android:gravity">center_vertical|left</item>
    </style>

    <style name="TextOnlyRadioButton" parent="CommonWidgetMargin">
        <item name="android:textSize">14sp</item>
        <item name="android:button">@null</item>
        <item name="android:textColor">@color/PrimaryTextDark</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/toogle_btn_light_selector</item>
    </style>

    <style name="TextOnlyRadioButton.GroupRangeChart">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="RadioGroup">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/widget_small_size</item>
        <item name="android:gravity">center</item>
        <item name="android:elevation" tools:targetApi="lollipop">2dp</item>
    </style>

</resources>
