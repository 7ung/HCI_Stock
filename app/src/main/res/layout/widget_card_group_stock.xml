<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent">
    <RelativeLayout
        android:id="@+id/layout_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:padding="@dimen/screen_padding_small">
        <ImageView
            android:id="@+id/iv_picture"
            android:layout_height="128dp"
            android:layout_width="128dp"
            android:background="@color/colorPrimary"/>
        <TextView
            android:id="@+id/tv_group_name"
            android:layout_width="128dp"
            android:layout_height="24dp"
            android:layout_below="@+id/iv_picture"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:textSize="18sp"
            android:textColor="@color/PrimaryTextDark"
            android:singleLine="true"
            android:gravity="center_horizontal|left"
            android:text="hello hellohellohello"/>
        <TextView
            android:id="@+id/tv_changed"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_below="@id/tv_group_name"
            android:textSize="14sp"
            android:layout_marginBottom="8dp"
            android:gravity="center_horizontal|left"
            android:drawablePadding="2dp"
            android:text="1.2"/>
    </RelativeLayout>

</android.support.v7.widget.CardView>