<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/tv_stock_name_header"
        android:text="CK"
        android:layout_weight="0.7"
        style="@style/GridViewHeader_TextContent.StockList" />
    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/grey"/>
    <TextView
        android:id="@+id/tv_price_ref_header"
        android:text="TC"
        style="@style/GridViewHeader_TextContent.StockList" />
    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/grey"/>
    <TextView
        android:id="@+id/tv_price_top_header"
        android:text="Trần"
        style="@style/GridViewHeader_TextContent.StockList" />
    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/grey"/>
    <TextView
        android:id="@+id/tv_price_bot_header"
        android:text="Sàn"
        style="@style/GridViewHeader_TextContent.StockList" />
    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/grey"/>
    <TextView
        android:id="@+id/tv_price_header"
        android:text="Giá"
        style="@style/GridViewHeader_TextContent.StockList" />
    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/grey"/>
    <TextView
        android:id="@+id/tv_change_header"
        android:text="+/-"
        style="@style/GridViewHeader_TextContent.StockList" />
</LinearLayout>