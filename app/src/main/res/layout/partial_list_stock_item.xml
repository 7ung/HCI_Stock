<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/tv_stock_name"
        android:text="MMM"
        android:layout_weight="0.7"
        android:textColor="@color/indexLess"
        android:background="@color/soft_grey"
        style="@style/GridViewHeader_TextContent.StockList" />
    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/grey"/>
    <TextView
        android:id="@+id/tv_price_ref"
        android:text="MM.MM"
        android:textColor="@color/indexEqual"
        android:background="@color/soft_grey"
        style="@style/GridViewHeader_TextContent.StockList" />
    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/grey"/>
    <TextView
        android:id="@+id/tv_price_top"
        android:text="MM.MM"
        android:textColor="@color/purple_a200"
        android:background="@color/soft_grey"
        style="@style/GridViewHeader_TextContent.StockList" />
    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/grey"/>
    <TextView
        android:id="@+id/tv_price_bot"
        android:text="MM.MM"
        android:textColor="@color/cyan_a200"
        android:background="@color/soft_grey"
        style="@style/GridViewHeader_TextContent.StockList" />
    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/grey"/>
    <TextView
        android:id="@+id/tv_price"
        android:text="MM.MM"
        android:textColor="@color/indexMore"
        android:background="@color/soft_grey"
        style="@style/GridViewHeader_TextContent.StockList" />
    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/grey"/>
    <TextView
        android:id="@+id/tv_change"
        android:text="7.77"
        android:textColor="@color/indexLess"
        android:drawableRight="@drawable/ic_down_10dp"
        android:background="@color/soft_grey"
        style="@style/GridViewHeader_TextContent.StockList" />

</LinearLayout>